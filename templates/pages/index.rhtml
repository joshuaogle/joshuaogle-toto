<section class="feature">
  <span class="feature-text">
    <em>Hey there.</em>
    I help make the internet <a href="/portfolio">better</a> for humans. I also write <a href="/archives">articles</a> and give <a href="/speaking">talks</a> on all things web.
  </span>
  <div class="feature-examples">
    <div class="example-desktop"><span><img src="/portfolio/desktop/20101109001.png"></span></div>
    <div class="example-iphone"><span><img src="/images/example-iphone-keynotes.png"></span></div>
  </div>
</section>

<div class="content">

    <section class="articles">
      <% @articles.select {|a| a[:category] == 'article' || 'portfolio' }[0...4].each do |article| %>
        <article class="post">
          <a href="<%= article.path %>">
            <span class="title">
              <p>
                <%= article.title %>
                <span class="date"><%= article.date %></span>
              </p>
            </span>
            <span class="body">
                <%= article.summary.gsub(/<\/?[^>]*>/, "") if article.category == "article" %>
                <% if article.category == "portfolio" %>
                  <span class="gallery">
                      <% if article[:desktop] %>
                        <img src="/portfolio/desktop/<%= article[:desktop].split(", ").first %>">
                      <% elsif article[:logo] %>
                        <img src="/portfolio/logo/<%= article[:logo].split(", ").first %>">
                      <% elsif article[:mobile]%>
                        <img src="/portfolio/mobile/<%= article[:mobile].split(", ").first %>">
                      <% end %>
                  </span>
                <% end %>                  
            </span>
          </a>
        </article>
      <% end %>
    </section>

</div>

